        function goBack() {
             if (historyStack.length > 1) {
                 historyStack.pop();
                 const previousState = historyStack[historyStack.length - 1];
                 if (typeof previousState === 'object' && previousState !== null) {
                     loadPage(previousState.page, previousState.param, previousState.option);
                 } else {
                      loadPage(previousState);
                 }
                 if (historyStack.length > 1) {
                    historyStack.pop();
                 }
             } else {
                 console.log("Cannot go back further.");
                 loadPage('home');
             }
         }

        function updateActiveNavLink() {
             document.querySelectorAll('.nav-link').forEach(link => {
                 link.classList.remove('active');
                 const pageName = link.getAttribute('onclick').match(/loadPage\('([^']+)'/);
                 if (pageName && pageName[1] === currentPage) {
                     link.classList.add('active');
                 }
             });
         }

        function toggleSearchBox() {
            const searchBox = document.getElementById('searchBox');
            searchBox.classList.toggle('hidden');
             if (!searchBox.classList.contains('hidden')) {
                 document.getElementById('searchInput').focus();
             }
        }

        function handleSearch() {
            const searchTerm = document.getElementById('searchInput').value;
            if (searchTerm.trim() !== '') {
                loadPage('searchResults');
                document.getElementById('searchBox').classList.add('hidden');
            } else {
                alert('Please enter a search term.');
            }
        }

        function toggleFAQ(id) {
             const answer = document.getElementById(`faq-answer-${id}`);
             const icon = document.getElementById(`faq-icon-${id}`);
             const questionButton = document.querySelector(`button[data-faq-id="${id}"]`);

             if (answer && icon && questionButton) {
                 const isOpen = answer.classList.toggle('open');
                 icon.classList.toggle('rotate-180', isOpen);
                 questionButton.setAttribute('aria-expanded', isOpen);
                 answer.setAttribute('aria-hidden', !isOpen);
             } else {
                 console.error(`FAQ elements for ID ${id} not found.`);
             }
         }

        function generateAndAttachFAQItems() {
             const faqContainer = document.getElementById('faqContainer');
             if (!faqContainer) {
                 console.error('FAQ container not found');
                 return;
             }
             const faqData = [
                 { id: 1, question: 'What types of events do you manage?', answer: 'We manage a wide range of events including weddings (destination, traditional, contemporary), corporate events (conferences, meetings, product launches), social gatherings (birthdays, anniversaries, parties), and more. We offer fully customizable packages.' },
                 { id: 2, question: 'How far in advance should I book?', answer: 'For large events like weddings or major corporate functions, we recommend booking 6-12 months in advance. For smaller parties or events, 2-4 months is usually sufficient. However, we can sometimes accommodate last-minute requests depending on availability.' },
                 { id: 3, question: 'What areas do you service?', answer: 'GatherGO is headquartered in Mumbai, but we operate and manage events across all major cities in India, including Delhi, Bangalore, Jaipur, Goa, Hyderabad, Chennai, and more. Contact us to discuss your specific location needs.' },
                 { id: 4, question: 'Can you accommodate dietary restrictions?', answer: 'Absolutely! We work closely with our catering partners to accommodate various dietary needs, including vegetarian, vegan, gluten-free, Jain, allergies, and other specific requirements. Please let us know your needs during the planning phase.' }
             ];
             let faqHTML = '';
             faqData.forEach(item => { faqHTML += generateFAQItem(item.id, item.question, item.answer); });
             faqContainer.innerHTML = faqHTML;
             attachFAQListeners();
         }

        function attachFAQListeners() {
             document.querySelectorAll('.faq-question').forEach(button => {
                 if (!button.hasAttribute('data-listener-attached')) {
                     button.addEventListener('click', () => { toggleFAQ(button.getAttribute('data-faq-id')); });
                     button.setAttribute('data-listener-attached', 'true');
                 }
             });
         }

        function addToCart(name, price, image) {
             const existingItem = cartItems.find(item => item.name === name);
             if (existingItem) { existingItem.quantity += 1; }
             else { cartItems.push({ name, price, image, quantity: 1 }); }
             updateCart();
             const shortName = name.length > 20 ? name.substring(0, 17) + '...' : name;
             showCartNotification(`${shortName} added!`);
         }

        function showCartNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'fixed bottom-5 right-5 bg-green-500 text-white px-4 py-2 rounded-lg shadow-md text-sm z-50 animate-pulse';
            notification.textContent = message;
            document.body.appendChild(notification);
            setTimeout(() => { notification.remove(); }, 2500);
        }

        function updateCart() {
            const cartItemsElement = document.getElementById('cartItems');
            const cartCountElement = document.getElementById('cartCount');
            const cartTotalElement = document.getElementById('cartTotal');
            const checkoutButton = document.getElementById('checkoutButton');
            if (!cartItemsElement || !cartCountElement || !cartTotalElement || !checkoutButton) return;

            let total = 0;
            let totalQuantity = 0;

            if (cartItems.length === 0) {
                cartItemsElement.innerHTML = '<p class="text-gray-500 text-center py-4">Your cart is empty</p>';
                checkoutButton.classList.add('hidden');
            } else {
                cartItemsElement.innerHTML = '';
                cartItems.forEach((item, index) => {
                    total += item.price * item.quantity;
                    totalQuantity += item.quantity;
                    cartItemsElement.innerHTML += `
                        <div class="cart-item">
                            <img src="${item.image}" alt="${item.name}" class="w-12 h-12 object-cover rounded mr-3 flex-shrink-0">
                            <div class="flex-grow">
                                <p class="text-sm font-medium text-gray-800">${item.name}</p>
                                <p class="text-xs text-gray-500">â‚¹${item.price.toLocaleString()} x ${item.quantity}</p>
                            </div>
                            <div class="flex items-center ml-2">
                                 <button onclick="updateQuantity(${index}, ${item.quantity - 1})" class="text-gray-500 hover:text-pink-600 px-1 ${item.quantity <= 1 ? 'opacity-50 cursor-not-allowed' : ''}" ${item.quantity <= 1 ? 'disabled' : ''}><i class="fas fa-minus-circle text-sm"></i></button>
                                <span class="text-sm font-medium mx-1">${item.quantity}</span>
                                 <button onclick="updateQuantity(${index}, ${item.quantity + 1})" class="text-gray-500 hover:text-pink-600 px-1"><i class="fas fa-plus-circle text-sm"></i></button>
                                <button onclick="removeFromCart(${index})" class="text-red-500 hover:text-red-700 ml-3 pl-1 border-l border-gray-200"><i class="fas fa-trash-alt text-sm"></i></button>
                             </div>
                        </div>`;
                });
                checkoutButton.classList.remove('hidden');
            }
            cartCountElement.textContent = totalQuantity;
            cartTotalElement.textContent = `Total: â‚¹${total.toLocaleString()}`;
        }

         function updateQuantity(index, newQuantity) {
             if (newQuantity < 1) { removeFromCart(index); }
             else { cartItems[index].quantity = newQuantity; updateCart(); }
         }

        function removeFromCart(index) {
            cartItems.splice(index, 1);
            updateCart();
        }

        function clearCart() {
            cartItems = [];
            updateCart();
        }

         function checkout() {
             if (cartItems.length > 0) {
                 alert(`Simulating checkout...\nProceeding with ${cartItems.length} item type(s) (Total Quantity: ${cartItems.reduce((sum, item) => sum + item.quantity, 0)}).\nTotal Cost: â‚¹${calculateCartTotal().toLocaleString()}`);
                  clearCart();
                 loadPage('home');
             } else {
                 alert("Your cart is empty.");
             }
         }

         function calculateCartTotal() { return cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0); }

        function calculateBudget() {
            const venue = parseInt(document.getElementById('venueCost')?.value) || 0;
            const catering = parseInt(document.getElementById('cateringCost')?.value) || 0;
            const decor = parseInt(document.getElementById('decorCost')?.value) || 0;
            const photo = parseInt(document.getElementById('photoCost')?.value) || 0;
            const budgetResult = document.getElementById('budgetResult');
            const totalCostSpan = document.getElementById('totalCost');
            if (!budgetResult || !totalCostSpan) return;
            const total = venue + catering + decor + photo;
            totalCostSpan.textContent = `â‚¹${total.toLocaleString()}`;
            budgetResult.classList.add('visible');
            console.log(`Budget Total: â‚¹${total.toLocaleString()}`);
        }

         function attachFilePreviewListener() {
             const fileInput = document.getElementById('guestList');
             if (fileInput) {
                 if (!fileInput.hasAttribute('data-listener-attached')) {
                     fileInput.addEventListener('change', handleFilePreview);
                     fileInput.setAttribute('data-listener-attached', 'true');
                 }
             } else { console.warn("File input 'guestList' not found on this page."); }
         }

         function handleFilePreview(event) {
             const file = event.target.files[0];
             const preview = document.getElementById('filePreview');
              if (file && preview) {
                  preview.innerHTML = `
                      <div class="flex items-center justify-between bg-gray-100 p-2 rounded border border-gray-300">
                          <div class="flex items-center overflow-hidden mr-2"><i class="fas fa-file-alt text-pink-600 mr-2 flex-shrink-0"></i><span class="text-sm truncate" title="${file.name}">${file.name}</span><span class="text-xs text-gray-500 ml-2 flex-shrink-0">(${(file.size / 1024).toFixed(1)} KB)</span></div>
                          <button type="button" onclick="removeFilePreview()" class="text-red-500 hover:text-red-700 flex-shrink-0"><i class="fas fa-times-circle"></i></button>
                      </div>`;
                  preview.classList.remove('hidden');
              }
         }

         function removeFilePreview() {
             const fileInput = document.getElementById('guestList');
             const preview = document.getElementById('filePreview');
             if (fileInput) fileInput.value = '';
             if (preview) { preview.innerHTML = ''; preview.classList.add('hidden'); }
         }

        function handleLogin(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;
            alert(`Simulating login for: ${email}`);
            localStorage.setItem('userEmail', email);
            loadPage('home');
        }

        function handleSignUp(event) {
            event.preventDefault();
            const fullName = document.getElementById('fullName').value;
            const email = document.getElementById('signupEmail').value;
            alert(`Simulating sign up for: ${fullName} (${email})`);
             alert('Sign up successful! Please log in.');
            loadPage('login');
        }

         function handleBooking(event, hotelName) {
            event.preventDefault();
            const name = document.getElementById('bookingName').value;
            const email = document.getElementById('bookingEmail').value;
            const phone = document.getElementById('bookingPhone').value;
            const eventType = document.getElementById('eventType').value;
            const eventDate = document.getElementById('eventDate').value;
            const guestCount = document.getElementById('guestCount').value;
            const notes = document.getElementById('additionalNotes').value;
            const guestFile = document.getElementById('guestList').files[0];
             if (!name || !email || !phone || !eventType || !eventDate || !guestCount) { alert('Please fill in all required fields.'); return; }
            let confirmationMessage = `Booking Request Confirmation:\n\nThank you, ${name}! Your request for ${hotelName} has been submitted.\n\nDetails:\n- Event Type: ${eventType}\n- Date: ${eventDate}\n- Guests: ${guestCount}\n- Contact: ${email} / ${phone}\n`;
             if (guestFile) { confirmationMessage += `- Guest List File: ${guestFile.name}\n`; }
             if (notes) { confirmationMessage += `- Notes: ${notes}\n`; }
            if (cartItems.length > 0) {
                confirmationMessage += `\nCatering Order (${cartItems.length} item types):\n`;
                 let total = 0; let totalQuantity = 0;
                cartItems.forEach(item => { confirmationMessage += `- ${item.name} (x${item.quantity}): â‚¹${(item.price * item.quantity).toLocaleString()}\n`; total += item.price * item.quantity; totalQuantity += item.quantity; });
                 confirmationMessage += `Total Items: ${totalQuantity}\nCatering Total: â‚¹${total.toLocaleString()}\n`;
            }
            confirmationMessage += `\nOur team will contact you shortly to confirm availability and finalize details.`;
            alert(confirmationMessage);
             clearCart();
             event.target.reset();
             removeFilePreview();
            loadPage('home');
        }

        function handleContact(event) {
            event.preventDefault();
            const name = document.getElementById('contactFullName').value;
            const email = document.getElementById('contactEmail').value;
            const phone = document.getElementById('contactPhone').value;
            const message = document.getElementById('contactMessage').value;
             if (!name || !email || !phone || !message) { alert('Please fill in all fields.'); return; }
            alert(`Thank you, ${name}!\n\nYour message has been received. We'll get back to you at ${email} or ${phone} soon.`);
            document.getElementById('contactForm').reset();
        }

         function handleAccountUpdate(event) {
             event.preventDefault();
             const name = document.getElementById('accountName').value;
             const email = document.getElementById('accountEmail').value;
             const phone = document.getElementById('accountPhone').value;
             const newPassword = document.getElementById('accountPassword').value;
             const confirmPassword = document.getElementById('confirmPassword').value;
             if (newPassword && newPassword !== confirmPassword) { alert("New passwords do not match."); return; }
             alert(`Account details updated for ${name}. ${newPassword ? '(Password change requested)' : ''}`);
             loadPage('profile');
         }

