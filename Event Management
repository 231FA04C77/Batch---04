                              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                                   ${generateFoodCategoryCard('Tiffins / Breakfast', `${option}-tiffins`, 'https://images.unsplash.com/photo-1585387867660-ec17b89a6f8d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80')}
                                   ${generateFoodCategoryCard('Lunch', `${option}-lunch`, 'https://images.unsplash.com/photo-1604467795348-f7c2b119951b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80')}
                                   ${generateFoodCategoryCard('Snacks / Starters', `${option}-snacks`, 'https://images.unsplash.com/photo-1598103442031-3cc7a7cf1816?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80')}
                                   ${generateFoodCategoryCard('Dinner', `${option}-dinner`, 'https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80')}
                              </div>`;
                     break;
                 case 'foodItems':
                      const pathParts = option.split('-'); const mealStyle = pathParts[0]; const mealType = pathParts[1]; const mealCategory = pathParts[2]; const isVeg = mealType === 'veg'; const categoryTitle = mealCategory.charAt(0).toUpperCase() + mealCategory.slice(1); title = `${isVeg ? 'Veg' : 'Non-Veg'} ${categoryTitle} (${mealStyle === 'buffet' ? 'Buffet' : 'Table Dining'})`; backButtonTarget = 'foodCategories'; const backOptionCat = `${pathParts[0]}-${pathParts[1]}`;
                      const items = cateringData[mealType]?.[mealCategory] || [];
                      html += `<button onclick="loadPage('${backButtonTarget}', '', '${backOptionCat}')" class="text-sm text-pink-600 hover:underline mb-4"><i class="fas fa-arrow-left mr-1"></i> Back to Categories</button>
                               <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 section-heading mb-12">${title}</h2>
                               <p class="text-center text-gray-600 max-w-2xl mx-auto mb-16">Browse the dishes available for this category. Click 'Add to Cart' to include them in your event quote.</p>
                               <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">${items.length > 0 ? items.map(item => generateFoodItemCard(item)).join('') : '<p class="col-span-full text-center text-gray-500 py-10">No items found for this category.</p>'}</div>`;
                     break;
             }
             html += `</div></section>`;
             return html;
         }

          function generateFoodCategoryCard(title, optionValue, imageUrl) {
             return `
                 <div class="p-4 bg-white rounded-lg shadow-md hover-card cursor-pointer text-center" onclick="loadPage('foodItems', '', '${optionValue}')">
                     <img src="${imageUrl}" alt="${title}" class="w-full h-40 object-cover rounded mb-4">
                     <h3 class="text-lg font-semibold text-gray-800">${title}</h3>
                 </div>`;
         }

         function generateFoodItemCard(item) {
            return `
                <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
                    <img src="${item.image}" alt="${item.name}" class="w-full h-40 object-cover">
                    <div class="p-4 flex-grow flex flex-col justify-between">
                        <div><h3 class="text-md font-semibold text-gray-900 mb-1">${item.name}</h3><p class="text-sm font-bold text-pink-600 mb-3">â‚¹${item.price.toLocaleString()}</p></div>
                        <button onclick="addToCart('${item.name.replace(/'/g, "\\'")}', ${item.price}, '${item.image}')" class="mt-auto w-full bg-pink-600 text-white px-3 py-2 rounded hover:bg-pink-700 transition duration-200 text-sm font-medium flex items-center justify-center"><i class="fas fa-cart-plus mr-2"></i> Add to Cart</button>
                    </div>
                </div>`;
        }

        function generateSettingsPage(page) {
            let html = `<section class="py-16 lg:py-20 bg-gray-50 min-h-[calc(100vh-14rem)]"><div class="container mx-auto px-4 sm:px-6 lg:px-8">`;
            let title = 'Settings';
            switch (page) {
                case 'settings':
                     title = 'Settings Dashboard';
                     html += `<h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-12 section-heading">${title}</h2>
                         <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-[1fr_2fr] gap-8">
                            <div class="p-6 bg-white rounded-lg shadow-lg text-center"><img src="https://source.unsplash.com/random/100x100/?portrait-professional" alt="User Avatar" class="w-24 h-24 rounded-full mx-auto mb-4 border-4 border-pink-200"><h3 class="text-xl font-semibold text-gray-800">CH.SAI KRISHNA</h3><p class="text-sm text-gray-500 mb-4">saikrishna@example.com</p><button onclick="loadPage('profile')" class="text-sm text-pink-600 hover:underline">View Profile</button></div>
                            <div class="space-y-4">${generateSettingsLink('accountSettings', 'Account Information', 'Update name, email, phone, password.', 'fa-user-edit')} ${generateSettingsLink('privacySettings', 'Privacy & Security', 'Manage data sharing and account security.', 'fa-shield-alt')} ${generateSettingsLink('helpSupport', 'Help & Support', 'Access FAQs or contact support.', 'fa-question-circle')} <div class="p-4 bg-white rounded-lg shadow flex justify-between items-center border border-gray-200"><div><h4 class="font-semibold text-gray-800">Notifications</h4><p class="text-sm text-gray-600">Control email and app notifications.</p></div><i class="fas fa-bell text-xl text-gray-400"></i></div></div>
                         </div>`;
                    break;
                case 'accountSettings':
                    title = 'Account Information';
                     html += `<h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-12 section-heading">${title}</h2>
                        <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
                             <button onclick="loadPage('settings')" class="text-sm text-pink-600 hover:underline mb-4"><i class="fas fa-arrow-left mr-1"></i> Back to Settings</button>
                            <form onsubmit="handleAccountUpdate(event)" class="space-y-5">
                                <div><label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label><input type="text" id="accountName" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" value="CH.SAI KRISHNA"></div>
                                <div><label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label><input type="email" id="accountEmail" class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed" value="saikrishna@example.com" readonly><p class="text-xs text-gray-500 mt-1">Email cannot be changed here. Contact support if needed.</p></div>
                                <div><label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label><input type="tel" id="accountPhone" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" value="+91 98765 43210"></div>
                                 <div class="border-t pt-5"><label class="block text-sm font-medium text-gray-700 mb-1">Change Password (Optional)</label><input type="password" id="accountPassword" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500 mb-2" placeholder="Enter new password"><input type="password" id="confirmPassword" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" placeholder="Confirm new password"></div>
                                <button type="submit" class="w-full bg-pink-600 text-white px-6 py-3 rounded-lg hover:bg-pink-700 transition duration-300 font-semibold">Save Changes</button>
                             </form>
                        </div>`;
                    break;
                 case 'privacySettings':
                     title = 'Privacy & Security';
                      html += `<h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-12 section-heading">${title}</h2>
                         <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg space-y-6">
                              <button onclick="loadPage('settings')" class="text-sm text-pink-600 hover:underline mb-4"><i class="fas fa-arrow-left mr-1"></i> Back to Settings</button>
                             <div><h4 class="font-semibold text-gray-800 mb-2">Data Sharing</h4><label class="flex items-center space-x-3 cursor-pointer"><input type="checkbox" class="form-checkbox h-5 w-5 text-pink-600 border-gray-300 rounded focus:ring-pink-500" checked><span class="text-gray-700 text-sm">Allow personalized recommendations based on activity.</span></label><label class="flex items-center space-x-3 mt-2 cursor-pointer"><input type="checkbox" class="form-checkbox h-5 w-5 text-pink-600 border-gray-300 rounded focus:ring-pink-500"><span class="text-gray-700 text-sm">Share anonymized data for service improvement.</span></label></div>
                             <div class="border-t pt-6"><h4 class="font-semibold text-gray-800 mb-2">Account Security</h4><label class="flex items-center space-x-3 cursor-pointer"><input type="checkbox" class="form-checkbox h-5 w-5 text-pink-600 border-gray-300 rounded focus:ring-pink-500"><span class="text-gray-700 text-sm">Enable Two-Factor Authentication (2FA).</span></label><p class="text-xs text-gray-500 mt-1">Requires phone number verification.</p></div>
                             <button class="w-full bg-pink-600 text-white px-6 py-3 rounded-lg hover:bg-pink-700 transition duration-300 font-semibold mt-4">Save Privacy Settings</button>
                         </div>`;
                     break;
                 case 'helpSupport':
                     title = 'Help & Support';
                     html += `<h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-12 section-heading">${title}</h2>
                         <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg space-y-6">
                              <button onclick="loadPage('settings')" class="text-sm text-pink-600 hover:underline mb-4"><i class="fas fa-arrow-left mr-1"></i> Back to Settings</button>
                              <div><h4 class="font-semibold text-gray-800 mb-3">Quick Help</h4><ul class="list-disc list-inside space-y-1 text-sm text-blue-600"><li><a href="#" class="hover:underline">How to book a venue?</a></li><li><a href="#" class="hover:underline">Understanding catering options</a></li><li><a href="#" class="hover:underline">Resetting your password</a></li><li><a href="#" class="hover:underline">Contacting customer support</a></li></ul></div>
                             <div class="border-t pt-6"><h4 class="font-semibold text-gray-800 mb-3">Contact Support Team</h4><p class="text-sm text-gray-600 mb-4">If you need further assistance, reach out via:</p><p class="flex items-center text-sm mb-2"><i class="fas fa-envelope fa-fw mr-2 text-pink-600"></i> support@gathergo.com</p><p class="flex items-center text-sm"><i class="fas fa-phone fa-fw mr-2 text-pink-600"></i> +91 999 673 984 (Mon-Sat, 9am-6pm)</p></div>
                               <button onclick="loadPage('contact')" class="w-full bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-300 font-semibold mt-4">Go to Contact Page</button>
                         </div>`;
                     break;
             }
            html += `</div></section>`;
            return html;
        }

         function generateSettingsLink(page, title, description, icon) {
              return `
                 <div class="p-4 bg-white rounded-lg shadow flex justify-between items-center border border-gray-200 hover:shadow-md hover:border-pink-200 transition duration-200 cursor-pointer" onclick="loadPage('${page}')">
                     <div><h4 class="font-semibold text-gray-800">${title}</h4><p class="text-sm text-gray-600">${description}</p></div>
                     <i class="fas ${icon} text-xl text-pink-500 ml-4"></i>
                 </div>`;
         }

        function generateSearchResultsPage(term) {
             const results = []; const searchTermLower = term.toLowerCase();
             const services = [ { page: 'weddingPlanning', title: 'Wedding Planning Services', desc: 'Comprehensive planning for your special day...' }, { page: 'corporateHotels', title: 'Corporate Event Venues', desc: 'Professional venues for meetings & conferences...' }, { page: 'partyHotels', title: 'Party Venues', desc: 'Discover locations for birthdays and celebrations...' }, { page: 'cateringServices', title: 'Catering Services', desc: 'Buffet and table dining, veg and non-veg menus...' }, { page: 'eventDecor', title: 'Event Decor Services', desc: 'Transform your venue with custom themes...' }, { page: 'photographyServices', title: 'Photography & Videography', desc: 'Capture every precious moment professionally...' }, { page: 'birthdayHotels', title: 'Birthday Celebration Venues', desc: 'Plan fun-filled birthday parties for all ages...' } ];
             services.forEach(s => { if (s.title.toLowerCase().includes(searchTermLower) || s.desc.toLowerCase().includes(searchTermLower)) { results.push({ type: 'service', ...s }); } });
             const allHotelTypes = ['marriage', 'party', 'corporate', 'birthday'];
             allHotelTypes.forEach(type => { const hotelData = getHotelDataForPage(`${type}Hotels`); hotelData.hotels.forEach(hotel => { const details = getHotelDetails(hotel.name); if (hotel.name.toLowerCase().includes(searchTermLower) || hotel.location.toLowerCase().includes(searchTermLower) || details.description.toLowerCase().includes(searchTermLower) || details.amenities.join(' ').toLowerCase().includes(searchTermLower)) { if (!results.some(r => r.type === 'venue' && r.param === hotel.name)) { results.push({ type: 'venue', page: 'hotelDetails', param: hotel.name, title: hotel.name, desc: `${details.description.substring(0, 60)}... (${hotel.location})` }); } } }); });
             let resultsHTML = '';
             if (results.length > 0) {
                 results.forEach(res => {
                     let colorClass = 'pink'; let tag = 'Service';
                     if (res.type === 'venue') { colorClass = 'purple'; tag = 'Venue'; }
                     else if (res.page === 'cateringServices') { colorClass = 'yellow'; tag = 'Catering'; }
                     else if (res.page === 'eventDecor') { colorClass = 'green'; tag = 'Decor'; }
                     else if (res.page === 'photographyServices') { colorClass = 'indigo'; tag = 'Photo/Video'; }
                     else if (res.page === 'weddingPlanning') { colorClass = 'red'; }
                     else if (res.page.includes('Hotels')) { colorClass = 'blue'; tag = 'Venue Category' }
                     resultsHTML += `
                          <div class="p-6 bg-white rounded-lg shadow-md hover-card cursor-pointer" onclick="loadPage('${res.page}', '${res.param || ''}')">
                               <h3 class="text-xl font-bold text-${colorClass}-600 mb-2">${res.title}</h3>
                               <p class="text-sm text-gray-600 mb-2">${res.desc}</p>
                               <span class="text-xs bg-${colorClass}-100 text-${colorClass}-700 px-2 py-0.5 rounded">${tag}</span>
                          </div>`;
                 });
             } else { resultsHTML = `<p class="col-span-full text-center text-gray-500 py-10">No results found matching your search term "${term}".</p>`; }
             return `
                 <section class="py-16 md:py-20 bg-gray-50 min-h-[calc(100vh-14rem)]">
                     <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                         <h2 class="text-3xl font-bold text-center text-gray-800 section-heading mb-4">Search Results</h2>
                         <p class="text-center text-gray-600 mb-12">Showing results for: "<span class="font-semibold">${term}</span>"</p>
                         <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">${resultsHTML}</div>
                     </div>
                 </section>`;
         }

        function filterByLocation() {
            const selectElement = document.getElementById('locationSelect');
            if (selectElement) {
                selectedLocation = selectElement.value;
                console.log("Location filter set to:", selectedLocation);
                updateLocationFilterStatus();
            }
        }

        function clearLocationFilter() {
             selectedLocation = '';
             const selectElement = document.getElementById('locationSelect');
             if (selectElement) { selectElement.value = ''; }
             updateLocationFilterStatus();
             console.log("Location filter cleared.");
             const venuePages = ['marriageHotels', 'partyHotels', 'corporateHotels', 'birthdayHotels'];
             if (venuePages.includes(currentPage)) { loadPage(currentPage); }
         }

         function updateLocationFilterStatus() {
            const statusElement = document.getElementById('locationFilterStatus');
            if (statusElement) {
                statusElement.textContent = selectedLocation ? `Filtering venues for ${selectedLocation}. Click a venue category below.` : 'Showing all locations. Select a city to filter venues.';
            }
         }

        document.addEventListener('DOMContentLoaded', function() {
            loadPage(historyStack[0]);
            updateCart();
        });
    </script>
</body>
</html>

