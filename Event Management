                corporate: [ { name: 'Business Center', location: 'Mumbai', price: 'â‚¹60,000 onwards', capacity: '50-200 guests' }, { name: 'Conference Plaza', location: 'Delhi', price: 'â‚¹70,000 onwards', capacity: '100-300 guests' }, { name: 'Tech Park Convention', location: 'Bangalore', price: 'â‚¹80,000 onwards', capacity: '150-400 guests' }, { name: 'Executive Suites', location: 'Hyderabad', price: 'â‚¹65,000 onwards', capacity: '80-250 guests' } ],
                 birthday: [ { name: 'Celebration Corner', location: 'Mumbai', price: 'â‚¹40,000 onwards', capacity: '50-150 guests' }, { name: 'Fun Zone', location: 'Delhi', price: 'â‚¹35,000 onwards', capacity: '30-100 guests' }, { name: 'Party Paradise', location: 'Bangalore', price: 'â‚¹45,000 onwards', capacity: '40-120 guests' }, { name: 'Carnival Hall', location: 'Chennai', price: 'â‚¹38,000 onwards', capacity: '50-130 guests' } ]
