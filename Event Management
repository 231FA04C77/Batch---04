    <script>
        let historyStack = ['login'];
        let cartItems = [];
        let selectedLocation = '';
        let currentPage = 'login';

        function loadPage(page, param = '', option = '') {
            console.log(`Loading page: ${page}, Param: ${param}, Option: ${option}`);
            const content = document.getElementById('content');
            const navbar = document.getElementById('navbar');
            const backButton = document.getElementById('backButton');
            const footer = document.querySelector('footer');

            if (!content) {
                console.error('Content element not found');
                return;
            }

            if (page === 'login' || page === 'signup') {
                navbar.classList.add('hidden');
                footer.classList.add('hidden');
            } else {
                navbar.classList.remove('hidden');
                 footer.classList.remove('hidden');
            }

             if (page !== 'home' && page !== 'login' && page !== 'signup' && historyStack.length > 1) {
                 backButton.classList.remove('hidden');
             } else {
                 backButton.classList.add('hidden');
             }

            const lastPage = historyStack[historyStack.length - 1];
            const newHistoryEntry = { page, param, option };

             let isDuplicateNav = false;
             if (typeof lastPage === 'object' && lastPage !== null && typeof newHistoryEntry === 'object') {
                  isDuplicateNav = lastPage.page === newHistoryEntry.page && lastPage.param === newHistoryEntry.param && lastPage.option === newHistoryEntry.option;
             } else {
                 isDuplicateNav = lastPage === page;
             }

             if (!isDuplicateNav) {
                 if (!((page === 'hotelDetails' && typeof lastPage === 'object' && lastPage.page === 'bookingForm' && lastPage.param === param) ||
                       (page === 'bookingForm' && typeof lastPage === 'object' && lastPage.page === 'hotelDetails' && lastPage.param === param))) {
                     historyStack.push(newHistoryEntry);
                 } else {
                    historyStack[historyStack.length - 1] = newHistoryEntry;
                 }
             } else {
                  console.log("Navigation to the same state prevented.");
             }

            console.log("History Stack:", historyStack);
            currentPage = page;
            updateActiveNavLink();

            let pageHTML = '';
            switch (page) {
                case 'login':
                    pageHTML = `
                        <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-50 via-white to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
                            <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg">
                                <div class="text-center">
                                    <img src="https://bcassetcdn.com/social/dtagfrf820/preview.png" alt="Gathergo Logo" class="w-24 h-24 mx-auto mb-4">
                                    <h1 class="text-4xl font-bold text-pink-600 font-['Playfair_Display',_serif]">GATHERGO</h1>
                                    <p class="mt-2 text-sm text-gray-600">YOUR EVENT. YOUR WAY!</p>
                                    <h2 class="mt-6 text-2xl font-semibold text-gray-900">Welcome Back!</h2>
                                    <p class="mt-2 text-sm text-gray-500">Sign in to continue your event planning.</p>
                                </div>
                                <form class="mt-8 space-y-6" onsubmit="handleLogin(event)">
                                    <div class="rounded-md shadow-sm -space-y-px">
                                        <div>
                                            <label for="email" class="sr-only">Email address</label>
                                            <input id="email" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-pink-500 focus:border-pink-500 focus:z-10 sm:text-sm" placeholder="Email address">
                                        </div>
                                        <div>
                                            <label for="password" class="sr-only">Password</label>
                                            <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-pink-500 focus:border-pink-500 focus:z-10 sm:text-sm" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center">
                                            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-pink-600 focus:ring-pink-500 border-gray-300 rounded">
                                            <label for="remember-me" class="ml-2 block text-sm text-gray-900">Remember me</label>
                                        </div>
                                        <div class="text-sm">
                                            <a href="#" class="font-medium text-pink-600 hover:text-pink-500">Forgot your password?</a>
                                        </div>
                                    </div>
                                    <div>
                                        <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 transition duration-300">Sign in</button>
                                    </div>
                                </form>
                                <p class="mt-6 text-center text-sm text-gray-600">
                                    Don't have an account? <a href="#" onclick="loadPage('signup')" class="font-medium text-pink-600 hover:text-pink-500">Sign Up</a>
                                </p>
                            </div>
                        </section>`;
                    break;
                case 'signup':
                    pageHTML = `
                         <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-pink-50 via-white to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
                            <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg">
                                 <div class="text-center">
                                     <img src="https://bcassetcdn.com/social/dtagfrf820/preview.png" alt="Gathergo Logo" class="w-24 h-24 mx-auto mb-4">
                                     <h1 class="text-4xl font-bold text-pink-600 font-['Playfair_Display',_serif]">GATHERGO</h1>
                                     <p class="mt-2 text-sm text-gray-600">YOUR EVENT. YOUR WAY!</p>
                                     <h2 class="mt-6 text-2xl font-semibold text-gray-900">Create your Account</h2>
                                      <p class="mt-2 text-sm text-gray-500">Join us to start planning your perfect event.</p>
                                </div>
                                <form class="mt-8 space-y-6" onsubmit="handleSignUp(event)">
                                    <div>
                                        <label for="fullName" class="sr-only">Full Name</label>
                                        <input id="fullName" name="fullName" type="text" required class="appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" placeholder="Full Name">
                                    </div>
                                     <div>
                                        <label for="signupEmail" class="sr-only">Email address</label>
                                        <input id="signupEmail" name="email" type="email" autocomplete="email" required class="appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" placeholder="Email address">
                                    </div>
                                    <div>
                                        <label for="signupPassword" class="sr-only">Password</label>
                                        <input id="signupPassword" name="password" type="password" autocomplete="new-password" required class="appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" placeholder="Password">
                                    </div>
                                    <div>
                                        <label for="phoneNumber" class="sr-only">Phone Number</label>
                                        <input id="phoneNumber" name="phoneNumber" type="tel" autocomplete="tel" required class="appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" placeholder="Phone Number">
                                    </div>
                                    <div>
                                        <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 transition duration-300">Sign Up</button>
                                    </div>
                                </form>
                                <p class="mt-6 text-center text-sm text-gray-600">
                                    Already have an account? <a href="#" onclick="loadPage('login')" class="font-medium text-pink-600 hover:text-pink-500">Login</a>
                                </p>
                            </div>
                        </section>`;
                    break;
                case 'home':
                    pageHTML = `
                        <section class="relative bg-cover bg-center h-[70vh] md:h-screen" style="background-image: url('https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1769&q=80');">
                            <div class="absolute inset-0 bg-black opacity-60"></div>
                            <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 flex items-center justify-center h-full">
                                <div class="text-center max-w-3xl">
                                    <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 font-['Playfair_Display',_serif] hero-text-shadow">Welcome to GatherGO</h1>
                                    <p class="text-lg md:text-xl text-white max-w-2xl mx-auto mb-8 hero-text-shadow">Transforming your special moments into unforgettable experiences with seamless planning and flawless execution.</p>
                                     <button onclick="loadPage('services')" class="bg-pink-600 text-white font-semibold py-3 px-8 rounded-lg hover:bg-pink-700 transition duration-300 text-lg shadow-md">Explore Services</button>
                                </div>
                            </div>
                        </section>
                         <section class="py-16 md:py-24 bg-white">
                             <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                                 <h2 class="text-3xl md:text-4xl font-bold text-gray-800 text-center mb-12 section-heading">How It Works</h2>
                                 <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 text-center">
