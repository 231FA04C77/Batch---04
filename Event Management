         function generateServiceCard(pageLink, title, description, iconClass, color) {
             const colors = {
                 pink: { bg: 'bg-pink-100', text: 'text-pink-600', gradient: 'from-pink-500 to-red-500' },
                 purple: { bg: 'bg-purple-100', text: 'text-purple-600', gradient: 'from-purple-500 to-indigo-500' },
                 blue: { bg: 'bg-blue-100', text: 'text-blue-600', gradient: 'from-blue-500 to-cyan-500' },
                 yellow: { bg: 'bg-yellow-100', text: 'text-yellow-600', gradient: 'from-yellow-400 to-orange-500' },
                 red: { bg: 'bg-red-100', text: 'text-red-600', gradient: 'from-red-500 to-pink-500' },
                 green: { bg: 'bg-green-100', text: 'text-green-600', gradient: 'from-green-500 to-emerald-500' },
                 indigo: { bg: 'bg-indigo-100', text: 'text-indigo-600', gradient: 'from-indigo-500 to-violet-500' },
                 teal: { bg: 'bg-teal-100', text: 'text-teal-600', gradient: 'from-teal-500 to-cyan-500' },
             };
             const selectedColor = colors[color] || colors.pink;
             const isVenueService = ['marriageHotels', 'partyHotels', 'corporateHotels', 'birthdayHotels'].includes(pageLink);
             const onclickAction = `loadPage('${pageLink}')`;
             return `
                 <div class="relative p-6 bg-white rounded-lg shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1 cursor-pointer hover-card text-center group" onclick="${onclickAction}">
                     <div class="absolute top-4 right-4 w-12 h-12 bg-gradient-to-br ${selectedColor.gradient} rounded-full flex items-center justify-center shadow-md transform transition-transform duration-300 group-hover:scale-110">
                         <i class="fas ${iconClass} text-white text-xl"></i>
                     </div>
                     <h3 class="text-xl font-bold ${selectedColor.text} mt-16 mb-2">${title}</h3>
                     <p class="mt-2 text-gray-600 text-sm">${description}</p>
                     <span class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-xs font-medium ${selectedColor.text} opacity-0 group-hover:opacity-100 transition-opacity duration-300">${isVenueService ? 'View Venues' : 'Learn More'}</span>
                 </div>`;
         }

         function generateGalleryImage(src, alt, category) {
              return `
                 <div class="group relative overflow-hidden rounded-lg shadow-lg cursor-pointer hover-card aspect-w-1 aspect-h-1">
                     <img src="${src}" alt="${alt}" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110">
                     <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-60 transition-opacity duration-300"></div>
                     <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                         <h3 class="text-lg font-semibold text-white">${alt}</h3>
                         <p class="text-sm text-pink-300">${category}</p>
                     </div>
                 </div>`;
         }

         function generateFAQItem(id, question, answer) {
             return `
                 <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
                     <button class="faq-question w-full flex justify-between items-center text-left p-4 bg-gray-50 hover:bg-gray-100 focus:outline-none transition duration-200" data-faq-id="${id}" aria-expanded="false" aria-controls="faq-answer-${id}">
                         <span class="font-semibold text-gray-800">${question}</span>
                         <i class="fas fa-chevron-down faq-icon text-pink-600 transition-transform duration-300" id="faq-icon-${id}"></i>
                     </button>
                     <div class="faq-answer px-4 text-sm text-gray-700 leading-relaxed" id="faq-answer-${id}" role="region" aria-labelledby="faq-question-${id}" aria-hidden="true">${answer}</div>
                 </div>`;
         }

         function generateHotelsList(title, hotels) {
            const filteredHotels = selectedLocation ? hotels.filter(hotel => hotel.location.includes(selectedLocation)) : hotels;
            let hotelsHTML = `
                <section class="py-16 md:py-20 bg-gray-50 min-h-[calc(100vh-14rem)]">
                    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 border-b pb-4">
                            <div>
                                <button onclick="loadPage('services')" class="text-sm text-pink-600 hover:underline mb-2"><i class="fas fa-arrow-left mr-1"></i> Back to Services</button>
                                <h2 class="text-3xl font-bold text-gray-800 section-heading">${title}</h2>
                            </div>
                             ${selectedLocation ? `<div class="text-sm mt-2 sm:mt-0 text-right">Showing venues in: <span class="font-semibold bg-pink-100 text-pink-700 px-3 py-1 rounded-full">${selectedLocation}</span></div>` : '<span class="text-sm text-gray-500 mt-2 sm:mt-0">Showing venues in all locations. Filter on the Services page.</span>'}
                         </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">`;
            if (filteredHotels.length === 0) {
                hotelsHTML += `
                    <div class="col-span-1 md:col-span-2 lg:col-span-3 text-center py-16">
                         <i class="fas fa-map-marked-alt text-6xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500 text-lg mb-4">No venues found ${selectedLocation ? `in ${selectedLocation}` : ''}.</p>
                        <p class="text-sm text-gray-500">Try selecting a different location on the <a href="#" onclick="loadPage('services')" class="text-pink-600 hover:underline">Services page</a>.</p>
                    </div>`;
            } else {
                 filteredHotels.forEach(hotel => {
                     const hotelDetails = getHotelDetails(hotel.name);
                     const cardImage = hotelDetails.images[0] || 'https://via.placeholder.com/400x300/cccccc/969696?text=Venue';
                     hotelsHTML += `
                         <div class="bg-white rounded-lg shadow-md overflow-hidden hover-card cursor-pointer flex flex-col" onclick="loadPage('hotelDetails', '${hotel.name}')">
                              <img src="${cardImage}" alt="${hotel.name}" class="w-full h-48 object-cover">
                             <div class="p-6 flex-grow flex flex-col justify-between">
                                 <div>
                                     <h3 class="text-xl font-bold text-pink-600 mb-2">${hotel.name}</h3>
                                     <p class="text-sm text-gray-500 mb-1 flex items-center"><i class="fas fa-map-marker-alt fa-fw mr-2 text-gray-400"></i>${hotel.location}</p>
                                     <p class="text-sm text-gray-500 mb-1 flex items-center"><i class="fas fa-users fa-fw mr-2 text-gray-400"></i>${hotel.capacity}</p>
                                     <p class="text-sm text-gray-500 mb-4 flex items-center"><i class="fas fa-dollar-sign fa-fw mr-2 text-gray-400"></i>${hotel.price}</p>
                                 </div>
                                 <button class="mt-auto w-full bg-pink-100 text-pink-700 px-4 py-2 rounded hover:bg-pink-200 transition duration-200 text-sm font-medium">View Details</button>
                             </div>
                         </div>`;
                 });
             }
            hotelsHTML += `</div></div></section>`;
            return hotelsHTML;
        }

        function generateHotelDetailsPage(hotelName) {
            const details = getHotelDetails(hotelName);
             let backPage = 'services';
             if (historyStack.length > 1) {
                const previousState = historyStack[historyStack.length - 2];
                if (typeof previousState === 'object' && previousState.page.includes('Hotels')) { backPage = previousState.page; }
                else if (typeof previousState === 'string' && previousState.includes('Hotels')) { backPage = previousState; }
             }
            return `
                 <section class="py-16 md:py-20 bg-white">
                     <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                          <div class="mb-8">
                              <button onclick="goBack()" class="text-sm text-pink-600 hover:underline mb-2"><i class="fas fa-arrow-left mr-1"></i> Back to Venues</button>
                              <h2 class="text-3xl md:text-4xl font-bold text-gray-800 section-heading">${hotelName}</h2>
                              <p class="text-gray-500 flex items-center mt-1"><i class="fas fa-map-marker-alt fa-fw mr-2"></i>${details.location}</p>
                          </div>
                         <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                             <div class="lg:col-span-2">
                                 <div class="mb-4 rounded-lg overflow-hidden shadow-lg"><img src="${details.images[0]}" alt="${hotelName} Main View" class="w-full h-64 md:h-96 object-cover"></div>
                                 <div class="grid grid-cols-3 gap-2">${details.images.slice(1).map(img => `<img src="${img}" alt="Gallery image for ${hotelName}" class="w-full h-24 md:h-32 object-cover rounded-md shadow cursor-pointer hover:opacity-80 transition duration-200">`).join('')}</div>
                             </div>
                             <div class="lg:col-span-1">
                                 <div class="bg-gray-50 p-6 rounded-lg shadow-md sticky top-24">
                                     <h3 class="text-2xl font-semibold text-gray-800 mb-4">Venue Details</h3>
                                     <p class="text-gray-600 leading-relaxed mb-6">${details.description}</p>
                                     <div class="space-y-3 text-sm mb-6">
                                          <p class="flex items-center"><i class="fas fa-users fa-fw w-5 mr-2 text-pink-600"></i><strong>Capacity:</strong><span class="ml-2">${details.capacity}</span></p>
                                          <p class="flex items-center"><i class="fas fa-dollar-sign fa-fw w-5 mr-2 text-pink-600"></i><strong>Price:</strong><span class="ml-2">${details.price}</span></p>
                                     </div>
                                     <h4 class="text-lg font-semibold text-gray-700 mb-3">Key Amenities:</h4>
                                     <ul class="list-disc list-inside space-y-1 text-sm text-gray-600 mb-8">${details.amenities.map(amenity => `<li>${amenity}</li>`).join('')}</ul>
                                     <button class="w-full bg-pink-600 text-white px-6 py-3 rounded-lg hover:bg-pink-700 transition duration-300 font-semibold text-lg" onclick="loadPage('bookingForm', '${hotelName}')">Request Booking / Quote</button>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </section>`;
        }

        function generateBookingForm(hotelName) {
             let cartSummaryHTML = '';
             if (cartItems.length > 0) {
                 cartSummaryHTML = '<h4 class="text-lg font-semibold mt-6 mb-2 text-gray-700 border-t pt-4">Selected Catering Items:</h4><ul class="list-disc list-inside space-y-1 text-sm text-gray-600">';
                 let total = 0;
                 cartItems.forEach(item => { cartSummaryHTML += `<li>${item.name} (x${item.quantity}) - â‚¹${(item.price * item.quantity).toLocaleString()}</li>`; total += item.price * item.quantity; });
                 cartSummaryHTML += `<li class="font-medium mt-2">Catering Subtotal: â‚¹${total.toLocaleString()}</li></ul>`;
             }
             return `
                 <section class="py-16 md:py-20 bg-gradient-to-b from-white to-pink-50">
                     <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                         <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-xl">
                             <button onclick="loadPage('hotelDetails', '${hotelName}')" class="text-sm text-pink-600 hover:underline mb-4"><i class="fas fa-arrow-left mr-1"></i> Back to ${hotelName} Details</button>
                             <h2 class="text-3xl font-bold text-center text-gray-800 mb-2 section-heading">Book ${hotelName}</h2>
                             <p class="text-center text-gray-500 mb-8">Fill out the form below to request a booking or get a quote.</p>
                            <form onsubmit="handleBooking(event, '${hotelName}')" class="space-y-6">
                                 <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                     <div><label class="block text-sm font-medium text-gray-700 mb-1" for="bookingName">Full Name *</label><input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" id="bookingName" type="text" required></div>
                                     <div><label class="block text-sm font-medium text-gray-700 mb-1" for="bookingEmail">Email Address *</label><input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" id="bookingEmail" type="email" required></div>
                                     <div><label class="block text-sm font-medium text-gray-700 mb-1" for="bookingPhone">Phone Number *</label><input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" id="bookingPhone" type="tel" required></div>
                                     <div><label class="block text-sm font-medium text-gray-700 mb-1" for="eventType">Event Type *</label><select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500 bg-white" id="eventType" required><option value="" disabled selected>Select event type...</option><option value="wedding">Wedding</option><option value="corporate">Corporate Event</option><option value="birthday">Birthday Party</option><option value="party">Social Gathering/Party</option><option value="other">Other</option></select></div>
                                     <div><label class="block text-sm font-medium text-gray-700 mb-1" for="eventDate">Preferred Event Date *</label><input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" id="eventDate" type="date" required min="${new Date().toISOString().split('T')[0]}"></div>
                                     <div><label class="block text-sm font-medium text-gray-700 mb-1" for="guestCount">Estimated Guests *</label><input class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" id="guestCount" type="number" min="1" placeholder="e.g., 150" required></div>
                                 </div>
                                  <div>
                                      <label class="block text-sm font-medium text-gray-700 mb-1">Guest List Upload (Optional)</label>
                                      <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-pink-400 transition duration-200">
                                          <input type="file" id="guestList" class="hidden" accept=".csv,.xlsx,.pdf,.txt,.doc,.docx,.jpg,.png">
                                          <label for="guestList" class="cursor-pointer text-gray-600"><i class="fas fa-cloud-upload-alt text-3xl text-pink-500 mb-2"></i><p class="text-sm">Click to upload guest list or seating plan</p><p class="text-xs text-gray-500 mt-1">(CSV, Excel, PDF, Word, Image)</p></label>
                                           <div id="filePreview" class="mt-3 hidden text-left"></div>
                                      </div>
                                  </div>
                                  <div><label class="block text-sm font-medium text-gray-700 mb-1" for="additionalNotes">Additional Notes / Requirements</label><textarea class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" id="additionalNotes" rows="3" placeholder="Any special requests, themes, budget considerations, or questions?"></textarea></div>
                                 ${cartSummaryHTML}
                                 <div class="mt-8 text-center"><button type="submit" class="bg-gradient-to-r from-pink-500 to-purple-600 text-white px-8 py-3 rounded-lg hover:from-pink-600 hover:to-purple-700 transition duration-300 font-semibold text-lg shadow-md">Submit Request</button><p class="text-xs text-gray-500 mt-3">We'll contact you within 24 hours to confirm details.</p></div>
                             </form>
                         </div>
                     </div>
                 </section>`;
         }

